<Window x:Class="CoronaAppIconGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoronaAppIconGenerator"
        mc:Ignorable="d"
        Title="Corona App Icon Generator" Height="450" Width="450" Background="AliceBlue" AllowDrop="True" Drop="Window_Drop">
    <Window.Resources>
    </Window.Resources>
    <Grid ShowGridLines="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="3*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Text="Drop image file here" VerticalAlignment="Bottom" HorizontalAlignment="Center" FontSize="30" Height="38" Width="294"/>
        <TextBlock Text="or" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="28" Height="38"/>
        <Button Content="Browse..." Grid.Row="2" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="30" Height="38" Width="294" Click="Button_Click"/>
    </Grid>
</Window>
